{
  "name": "trashify-backend",
  "version": "1.0.0",
  "description": "Backend API for Trashify - Home Pickup Service for Recyclable Waste",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "jest --testPathPattern=e2e",
    "test:coverage": "jest --coverage",
    "migrate": "knex migrate:latest",
    "migrate:rollback": "knex migrate:rollback",
    "seed": "knex seed:run",
    "seed:reset": "knex seed:run --specific=001_materials.js",
    "db:reset": "knex migrate:rollback --all && knex migrate:latest && knex seed:run",
    "setup": "node scripts/setup.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "logs": "tail -f logs/combined.log",
    "logs:error": "tail -f logs/error.log"
  },
  "keywords": [
    "recycling",
    "waste-management",
    "pickup-service",
    "sustainability"
  ],
  "author": "Trashify Team",
  "license": "MIT",
  "dependencies": {
    "aws-sdk": "^2.1490.0",
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.2.1",
    "firebase-admin": "^11.11.1",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.0.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "pg": "^8.11.3",
    "razorpay": "^2.9.2",
    "redis": "^4.6.10",
    "socket.io": "^4.7.4",
    "sqlite3": "^5.1.6",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
